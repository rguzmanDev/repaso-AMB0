<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Guardar">

    <!-- TextView que muestra las indicaciones al usuario -->
    <TextView
        android:id="@+id/txt_indicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite un mensaje para ser guardado en la base de datos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintVertical_bias="0.025"
        />

    <!-- EditText que permite al usuario ingresar el mensaje a guardar -->
    <EditText
        android:id="@+id/txtData"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:gravity="left|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_indicacion"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.300"
        tools:ignore="SpeakableTextPresentCheck" />

    <!-- BotÃ³n que guarda el mensaje ingresado en la base de datos -->
    <Button
        android:id="@+id/btn_guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="GUARDAR"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
